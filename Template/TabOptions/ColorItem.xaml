<UserControl x:Class="TailForWin.Template.TabOptions.ColorItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="380" d:DesignWidth="400">
    <Grid Margin="5">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="1*" />
      <ColumnDefinition Width="1*" />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="342*" />
      <RowDefinition Height="25" />
    </Grid.RowDefinitions>
    <Border BorderBrush="Silver" BorderThickness="1" Grid.ColumnSpan="2" Margin="0,0,0,5" Name="border1">
      <Grid Name="gridColorItem">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="160" />
          <ColumnDefinition Width="174*" />
          <ColumnDefinition Width="90" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
          <RowDefinition Height="35" />
          <RowDefinition Height="35" />
          <RowDefinition Height="35" />
          <RowDefinition Height="35" />
          <RowDefinition Height="35" />
          <RowDefinition Height="35" />
          <RowDefinition Height="35" />
          <RowDefinition Height="35" />
          <RowDefinition Height="67*" />
        </Grid.RowDefinitions>
        <Label Content="Font color:" Grid.Column="0" Grid.Row="0" Margin="0" Name="label1" VerticalAlignment="Center" />
        <Label Content="Background color:" Grid.Column="0" Grid.Row="1" Margin="0" Name="label2" VerticalAlignment="Center" />
        <Rectangle Grid.Column="1" Margin="30,5" Name="foregroundColor" Stroke="Black" Fill="{Binding Path=GuiDefaultForegroundColor, UpdateSourceTrigger=PropertyChanged}" />
        <Rectangle Grid.Column="1" Grid.Row ="1" Margin="30,5" Name="backgroundColor" Stroke="Black" Fill="{Binding Path=GuiDefaultBackgroundColor, UpdateSourceTrigger=PropertyChanged}" />
        <Button Content="Pick Color" Grid.Column="2" Grid.Row="0" Height="23" HorizontalAlignment="Center" Margin="0" Name="btnColorPickerForeground" VerticalAlignment="Center" Width="75" Click="btnColorPickerForeground_Click" />
        <Button Content="Pick Color" Grid.Column="2" Grid.Row="1" Height="23" HorizontalAlignment="Center" Margin="0" Name="btnColorPickerBackground" VerticalAlignment="Center" Width="75" Click="btnColorPickerBackground_Click" />
        <Label Content="Inactive font color:" Grid.Column="0" Grid.Row="2" Margin="0" Name="label3" VerticalAlignment="Center" />
        <Label Content="Inactive background color:" Grid.Column="0" Grid.Row="3" Margin="0" Name="label4" VerticalAlignment="Center" />
        <Rectangle Grid.Column="1" Grid.Row="2" Margin="30,5" Name="inactiveForegroundColor" Stroke="Black" Fill="{Binding Path=GuiDefaultInactiveForegroundColor, UpdateSourceTrigger=PropertyChanged}" />
        <Rectangle Grid.Column="1" Grid.Row ="3" Margin="30,5" Name="inactiveBackgroundColor" Stroke="Black" Fill="{Binding Path=GuiDefaultInactiveBackgroundColor, UpdateSourceTrigger=PropertyChanged}" />
        <Button Content="Pick Color" Grid.Column="2" Grid.Row="2" Height="23" HorizontalAlignment="Center" Margin="0" Name="btnColorPickerInactiveForeground" VerticalAlignment="Center" Width="75" Click="btnColorPickerInactiveForeground_Click" />
        <Button Content="Pick Color" Grid.Column="2" Grid.Row="3" Height="23" HorizontalAlignment="Center" Margin="0" Name="btnColorPickerInactiveBackground" VerticalAlignment="Center" Width="75" Click="btnColorPickerInactiveBackground_Click" />
        <Label Content="Highlight font color:" Grid.Column="0" Grid.Row="4" Margin="0" Name="label5" VerticalAlignment="Center" />
        <Rectangle Grid.Column="1" Grid.Row="4" Margin="30,5" Name="findHighlightForegroundColor" Stroke="Black" Fill="{Binding Path=GuiDefaultHighlightForegroundColor, UpdateSourceTrigger=PropertyChanged}" />
        <Button Content="Pick Color" Grid.Column="2" Grid.Row="4" Height="23" HorizontalAlignment="Center" Margin="0" Name="btnFindHightlightColor" VerticalAlignment="Center" Width="75" Click="btnFindHighlightColor_Click" />
        <Label Content="Highlight background color:" Grid.Column="0" Grid.Row="5" Margin="0" Name="label6" VerticalAlignment="Center" />
        <Rectangle Grid.Column="1" Grid.Row="5" Margin="30,5" Name="findHighlightBackgroundColor" Stroke="Black" Fill="{Binding Path=GuiDefaultHighlightBackgroundColor, UpdateSourceTrigger=PropertyChanged}" />
        <Button Content="Pick Color" Grid.Column="2" Grid.Row="5" Height="23" HorizontalAlignment="Center" Margin="0" Name="btnFindHightlightBackgroundColor" VerticalAlignment="Center" Width="75" Click="btnFindHighlightBackgroundColor_Click" />
        <Label Content="Line numbers color:" Grid.Column="0" Grid.Row="6" Margin="0" Name="label7" VerticalAlignment="Center" />
        <Rectangle Grid.Column="1" Grid.Row="6" Margin="30,5" Name="lineNumbersColor" Stroke="Black" Fill="{Binding Path=GuiDefaultLineNumbersColor, UpdateSourceTrigger=PropertyChanged}" />
        <Button Content="Pick Color" Grid.Column="2" Grid.Row="6" Height="23" HorizontalAlignment="Center" Margin="0" Name="btnLineNumbersColor" VerticalAlignment="Center" Width="75" Click="btnLineNumbersColor_Click" />
        <Label Content="Highlight color:" Grid.Column="0" Grid.Row="7" Margin="0" Name="label8" VerticalAlignment="Center" />
        <Rectangle Grid.Column="1" Grid.Row="7" Margin="30,5" Name="highlightColor" Stroke="Black" Fill="{Binding Path=GuiDefaultHighlightColor, UpdateSourceTrigger=PropertyChanged}" />
        <Button Content="Pick Color" Grid.Column="2" Grid.Row="7" Height="23" HorizontalAlignment="Center" Margin="0" Name="btnHighlightColor" VerticalAlignment="Center" Width="75" Click="btnHighlightColor_Click" />

      </Grid>
    </Border>
    <Button Content="Save" Height="23" HorizontalAlignment="Right" Margin="0,0,5,0" Name="btnSave" VerticalAlignment="Center" Width="75" Grid.Row="1" Grid.Column="0" Click="btnSave_Click" TabIndex="13" />
    <Button Content="Close" Height="23" HorizontalAlignment="Left" Margin="5,0,0,0" Name="btnCancel" VerticalAlignment="Center" Width="75" Grid.Row="1" Grid.Column="1" Click="btnCancel_Click" />
  </Grid>
</UserControl>
