<ResourceDictionary
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:po="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options"
  >

  <Style x:Key="VerticalHic" TargetType="{x:Type HeaderedItemsControl}">
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type HeaderedItemsControl}">
          <StackPanel Margin="20">
            <ContentPresenter
              Margin="8 20 0 0"
              ContentSource="Header"
              TextBlock.FontFamily="Trebuchet MS"
              TextBlock.FontSize="14px"
              TextBlock.FontWeight="Bold"
              TextBlock.Foreground="#65A"
              />
            <StackPanel
              HorizontalAlignment="Center"
              VerticalAlignment="Center"
              IsItemsHost="True"
              Orientation="Vertical"
              />
          </StackPanel>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

  <Style x:Key="HorizontalHic" TargetType="{x:Type HeaderedItemsControl}">
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type HeaderedItemsControl}">
          <StackPanel Margin="20">
            <ContentPresenter
              Margin="8 20 0 0"
              ContentSource="Header"
              TextBlock.FontFamily="Trebuchet MS"
              TextBlock.FontSize="14px"
              TextBlock.FontWeight="Bold"
              TextBlock.Foreground="#65A"
              />
            <StackPanel
              HorizontalAlignment="Center"
              VerticalAlignment="Center"
              IsItemsHost="True"
              Orientation="Horizontal"
              />
          </StackPanel>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

  <!--  Control colors.  -->
  <Color x:Key="WindowColor">#FFE8EDF9</Color>
  <Color x:Key="ContentAreaColorLight">#FFC5CBF9</Color>
  <Color x:Key="ContentAreaColorDark">#FF7381F9</Color>

  <Color x:Key="DisabledControlLightColor">#FFE8EDF9</Color>
  <Color x:Key="DisabledControlDarkColor">#FFC5CBF9</Color>

  <Color x:Key="SelectedBackgroundColor">#FFC5CBF9</Color>
  <Color x:Key="SelectedUnfocusedColor">#FFDDDDDD</Color>

  <Color x:Key="ControlMediumColor">#FF7381F9</Color>
  <Color x:Key="ControlDarkColor">#FF211AA9</Color>

  <Color x:Key="ControlMouseOverColor">#FF3843C4</Color>
  <Color x:Key="ControlPressedColor">#FF211AA9</Color>


  <!--  Border colors  -->
  <Color x:Key="BorderLightColor">#FFCCCCCC</Color>
  <Color x:Key="BorderMediumColor">#FF888888</Color>
  <Color x:Key="BorderDarkColor">#FF444444</Color>

  <Color x:Key="PressedBorderLightColor">#FF888888</Color>
  <Color x:Key="PressedBorderDarkColor">#FF444444</Color>

  <Color x:Key="DisabledBorderLightColor">#FFAAAAAA</Color>
  <Color x:Key="DisabledBorderDarkColor">#FF888888</Color>

  <Color x:Key="DefaultBorderBrushDarkColor">Black</Color>

  <!--  Glyph colors  -->
  <Color x:Key="GlyphColor">#888888</Color>
  <Color x:Key="GlyphMouseOver">#1C97EA</Color>
  <Color x:Key="GlyphMousePressed">#136FAE</Color>

  <!--  Control-specific resources.  -->
  <Color x:Key="HeaderTopColor">#FFC5CBF9</Color>
  <Color x:Key="DatagridCurrentCellBorderColor">Black</Color>
  <Color x:Key="SliderTrackDarkColor">#FFC5CBF9</Color>

  <Color x:Key="NavButtonFrameColor">#FF3843C4</Color>

  <Color x:Key="ColorGrey03Alpha">#4CF7F7F7</Color>

  <Color x:Key="ColorWhite">White</Color>
  <Color x:Key="ColorGrey02">#FFFAFAFA</Color>
  <Color x:Key="ColorGrey03">#FFF7F7F7</Color>
  <Color x:Key="ColorGrey10">#FFE5E5E5</Color>
  <Color x:Key="ColorGrey20">#FFCCCCCC</Color>
  <Color x:Key="ColorGrey35">#FFBBBBBB</Color>
  <Color x:Key="ColorGrey55">#FF919191</Color>
  <Color x:Key="ColorGrey65">#FF7B7B7B</Color>
  <Color x:Key="ColorGrey75">#FF636363</Color>
  <Color x:Key="ColorBlack">Black</Color>

  <Color x:Key="ColorLightBlue">#FFD6DBE9</Color>
  <Color x:Key="ColorBorderLightBlue">#FFB0CBF1</Color>
  <Color x:Key="ColorAndroidIsMouseOverBlue">#BB34B4E3</Color>
  <Color x:Key="ColorOrange">#FFE5C365</Color>
  <Color x:Key="ColorOrangePressed">#FFE8A6</Color>

  <Color x:Key="ColorStopRed">#FF8E210B</Color>
  <Color x:Key="ColorStartGreen">#FF317A2E</Color>

  <Color x:Key="DisabledForegroundColor">#CACBD3</Color>
  <Color x:Key="DefaultScrollBarColor">#D0D1D7</Color>
  <Color x:Key="ScrollBarPressed">#888888</Color>

  <Color x:Key="ColorMenuIconPlaceColor">#FFDCE0EC</Color>

  <SolidColorBrush x:Key="BrushSolidWhite" Color="{StaticResource ColorWhite}" po:Freeze="True" />
  <SolidColorBrush x:Key="BrushSolidGrey02" Color="{StaticResource ColorGrey02}" po:Freeze="True" />
  <SolidColorBrush x:Key="BrushSolidGrey03" Color="{StaticResource ColorGrey03}" po:Freeze="True" />
  <SolidColorBrush x:Key="BrushSolidGrey10" Color="{StaticResource ColorGrey10}" po:Freeze="True" />
  <SolidColorBrush x:Key="BrushSolidGrey20" Color="{StaticResource ColorGrey20}" po:Freeze="True" />
  <SolidColorBrush x:Key="BrushSolidGrey35" Color="{StaticResource ColorGrey35}" po:Freeze="True" />
  <SolidColorBrush x:Key="BrushSolidGrey55" Color="{StaticResource ColorGrey55}" po:Freeze="True" />
  <SolidColorBrush x:Key="BrushSolidGrey65" Color="{StaticResource ColorGrey65}" po:Freeze="True" />
  <SolidColorBrush x:Key="BrushSolidGrey75" Color="{StaticResource ColorGrey75}" po:Freeze="True" />
  <SolidColorBrush x:Key="BrushSolidBlack" Color="{StaticResource ColorBlack}" po:Freeze="True" />

  <SolidColorBrush x:Key="ButtonNormalBorder" Color="#FFBC7B" po:Freeze="True" />
  <SolidColorBrush x:Key="BrushSolidCustomBeige" Color="#FFFFFCF4" po:Freeze="True" />
  <SolidColorBrush x:Key="BrushSolidOrange" Color="{StaticResource ColorOrange}" po:Freeze="True" />
  <SolidColorBrush x:Key="BrushSolidOrangePressed" Color="{StaticResource ColorOrangePressed}" po:Freeze="True" />
  <SolidColorBrush x:Key="BrushSolidYellow" Color="#FFF29D" po:Freeze="True" />

  <SolidColorBrush x:Key="BrushSolidBlue" Color="#293955" po:Freeze="True" />
  <SolidColorBrush x:Key="BrushSolidLightBlue" Color="{StaticResource ColorLightBlue}" po:Freeze="True" />
  <SolidColorBrush x:Key="BrushSolidBorderLightBlue" Color="{StaticResource ColorBorderLightBlue}" po:Freeze="True" />
  <SolidColorBrush x:Key="BrushSolidAndroidIsMouseOverBlue" Color="{StaticResource ColorAndroidIsMouseOverBlue}" po:Freeze="True" />

  <SolidColorBrush x:Key="BrushSolidBorderMedium" Color="{StaticResource BorderMediumColor}" po:Freeze="True" />

  <SolidColorBrush x:Key="BrushSolidStopRed" Color="{StaticResource ColorStopRed}" po:Freeze="True" />
  <SolidColorBrush x:Key="BrushSolidStartGreen" Color="{StaticResource ColorStartGreen}" po:Freeze="True" />

  <SolidColorBrush x:Key="ScrollBarLightColor" po:Freeze="True">#E8E8EC</SolidColorBrush>
  <SolidColorBrush x:Key="BorderHighlight" po:Freeze="True">#FFF0D0</SolidColorBrush>

  <SolidColorBrush x:Key="BrushSolidMenuIconPlaceColor" Color="{StaticResource ColorMenuIconPlaceColor}" po:Freeze="True" />

  <LinearGradientBrush x:Key="MenuPopupBrush" StartPoint="0.5,0" EndPoint="0.5,1">
    <GradientStop Offset="0" Color="{StaticResource ColorWhite}" />
    <GradientStop Offset="0.5" Color="{StaticResource ControlMediumColor}" />
    <GradientStop Offset="1" Color="{StaticResource ColorWhite}" />
  </LinearGradientBrush>

  <LinearGradientBrush x:Key="ProgressBarIndicatorAnimatedFill" StartPoint="0,0" EndPoint="1,0">
    <LinearGradientBrush.GradientStops>
      <GradientStopCollection>
        <GradientStop Offset="0" Color="#000000FF" />
        <GradientStop Offset="0.4" Color="#600000FF" />
        <GradientStop Offset="0.6" Color="#600000FF" />
        <GradientStop Offset="1" Color="#000000FF" />
      </GradientStopCollection>
    </LinearGradientBrush.GradientStops>
  </LinearGradientBrush>

  <LinearGradientBrush x:Key="ButtonNormalBackground" StartPoint="0,0" EndPoint="0,1">
    <GradientStop Color="#F3F3F3" />
    <GradientStop Offset="0.5" Color="#EBEBEB" />
    <GradientStop Offset="0.5" Color="#DDDDDD" />
    <GradientStop Offset="1" Color="#CDCDCD" />
  </LinearGradientBrush>

  <LinearGradientBrush x:Key="ButtonOverBackground" StartPoint="0,0" EndPoint="0,1">
    <GradientStop Color="{StaticResource ColorGrey02}" />
    <GradientStop Offset="1" Color="#FFE0E0E3" />
  </LinearGradientBrush>
</ResourceDictionary>
