<Window x:Class="Org.Vs.TailForWin.Template.TabOptions.SystemInformation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Systeminformation" Height="450" Width="520" WindowStartupLocation="CenterOwner" Icon="/TailForWin;component/Res/SystemInfo.ico" ResizeMode="CanResizeWithGrip" ShowInTaskbar="False" MinHeight="450" MinWidth="520">
    <Grid Margin="5">
    <Grid.RowDefinitions>
      <RowDefinition Height="236*" />
      <RowDefinition Height="30" />
    </Grid.RowDefinitions>
    <ListView Margin="0,0,0,5" Name="listViewSysInfo" Grid.Row="0" SelectionChanged="listViewSysInfo_SelectionChanged">
      <ListView.View>
        <GridView>
          <GridViewColumn Width="auto" Header="Key" DisplayMemberBinding="{Binding Key}" />
          <GridViewColumn Width="auto" Header="Value" DisplayMemberBinding="{Binding Value}" />
        </GridView>
      </ListView.View>
    </ListView>
    <Button Content="Close" Height="23" HorizontalAlignment="Center" Margin="0" Name="btnClose" VerticalAlignment="Center" Width="75" Grid.Row="1" Click="btnClose_Click" TabIndex="0" />
  </Grid>
</Window>
