            <lvc:Axis.Separator>
              <lvc:Separator
                IsEnabled="False"
                Step="1"
                />
            </lvc:Axis.Separator>
          </lvc:Axis>
        </lvc:CartesianChart.AxisX>

        <lvc:CartesianChart.AxisY>
          <lvc:Axis
            x:Name="YAxis"
            Title="{DynamicResource AnalysisMemUsageChartY}"
            FontWeight="Normal"
            LabelFormatter="{Binding YAxisFormatter}"
