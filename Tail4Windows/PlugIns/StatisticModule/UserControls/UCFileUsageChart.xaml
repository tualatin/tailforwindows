        UpdaterTickCommand="{Binding UpdaterTickCommand}"
        Zoom="Xy"
        >
        <lvc:CartesianChart.ContextMenu>
          <ContextMenu>
            <MenuItem
              Header="{DynamicResource AnalysisContextMenuResetView}"
              Command="{Binding ResetViewCommand}"
              >
