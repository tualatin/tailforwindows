<Window x:Class="Org.Vs.TailForWin.PatternUtil.UI.DefinePattern"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Define pattern" Height="105" Width="342" WindowStartupLocation="CenterOwner" WindowStyle="ToolWindow" SnapsToDevicePixels="True" ShowInTaskbar="False" Loaded="Window_Loaded" ResizeMode="NoResize">
  <Grid Margin="5">
    <Grid.RowDefinitions>
      <RowDefinition Height="33"/>
      <RowDefinition Height="26"/>
    </Grid.RowDefinitions>

    <ComboBox Name="ComboBoxPattern" Margin="0,5,0,5" TabIndex="0" IsEditable="True" SelectionChanged="ComboBoxPattern_SelectionChanged" DisplayMemberPath="PatternString"/>

    <Grid Grid.Row="1">
      <Grid.ColumnDefinitions>
        <ColumnDefinition/>
        <ColumnDefinition Width="90"/>
        <ColumnDefinition/>
      </Grid.ColumnDefinitions>

      <Button Content="OK" Grid.Column="1" Height="23" Name="BtnSave" Click="BtnSave_Click" TabIndex="2"/>
      <CheckBox Name="CheckBoxRegex" Content="Regex" Grid.Column="2" Height="22" HorizontalAlignment="Right" TabIndex="1"/>
    </Grid>
  </Grid>
</Window>
