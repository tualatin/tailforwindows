<Window x:Class="Org.Vs.TailForWin.PatternUtil.UI.SelectPart"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select part" Height="98" Width="342" WindowStartupLocation="CenterOwner" WindowStyle="ToolWindow" Loaded="Window_Loaded" SnapsToDevicePixels="True" ShowInTaskbar="False">
  <Grid Margin="5,0,5,0">
    <Grid.RowDefinitions>
      <RowDefinition Height="33"/>
      <RowDefinition Height="26"/>
    </Grid.RowDefinitions>

    <TextBox Name="TextBoxSelectPart" Margin="0,5,0,5" PreviewMouseLeftButtonDown="TextBoxSelectPart_PreviewMouseLeftButtonDown" 
             PreviewMouseLeftButtonUp="TextBoxSelectPart_PreviewMouseLeftButtonUp" PreviewMouseMove="TextBoxSelectPart_PreviewMouseMove" MouseLeftButtonUp="TextBoxSelectPart_MouseLeftButtonUp" />

    <Grid Grid.Row="1">
      <Grid.ColumnDefinitions>
        <ColumnDefinition/>
        <ColumnDefinition Width="90"/>
        <ColumnDefinition/>
      </Grid.ColumnDefinitions>
      
      <Label Name="LabelPartCount" VerticalAlignment="Center"/>
      <Button Content="OK" Height="23" Grid.Column="1" Name="BtnSave" Click="BtnSave_Click" />
    </Grid>
  </Grid>
</Window>
