<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <Style TargetType="{x:Type Separator}">
    <Setter Property="SnapsToDevicePixels" Value="True"/>
    <Setter Property="OverridesDefaultStyle" Value="True"/>
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="Separator">
          <Viewbox Stretch="Uniform">
            <Canvas Height="1.3" Name="canvas1" Width="{TemplateBinding Width}">
              <Ellipse Canvas.Left="0" Height="1.3" Name="ellipse1" Width="{TemplateBinding Width}" Fill="#C2C4CB"/>
              <Border BorderBrush="#FFFFFF" Canvas.Left="0" Height="1.3" Name="border1" Width="{TemplateBinding Width}" BorderThickness="0,0,0,0.8" Margin="0,0.53,0,0"/>
            </Canvas>
          </Viewbox>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
</ResourceDictionary>